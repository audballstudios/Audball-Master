{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-react"
  ],
  "plugins": [
    "babel",
    "react",
    "promise"
  ],
  "env": {
    "browser" : true,
    "jest": true
  },
  "globals": {
    "__DEV__"      : false,
    "__TEST__"     : false,
    "__STAGING__"  : false,
    "__PROD__"     : false,
    "__COVERAGE__" : false
  },
  "rules": {
    "key-spacing"          : 0,
    "jsx-quotes"           : [2, "prefer-double"],
    "max-len"              : [2, 120, 2],
    "object-curly-spacing" : [2, "always"],
    "no-undef"             : 1,
    "semi"                 : [1, "always"],
    "eqeqeq"                : [1, "always"],
    "no-extra-semi"        : 0
  }
}
